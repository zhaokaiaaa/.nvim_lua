snippet th "Table Heading"
| ${1:Key} | ${2:Value} |
|-|-|
${0}
endsnippet

snippet tr "Table Row"
| ${1:Term} | ${2:Definition} |
${0}
endsnippet

# 根据用户输入新建一个Markdown格式的表格
snippet '(?<!\\)([0-9])([0-9])tb' "new table" r
          $1`!p
          x=match.group(1)
          y=match.group(2)
          row1=""
          row2=""
          for i in range(int(x)):
              row1+="| <++> "
              row2+="|:-:"
          row1+="|\n"
          row2+="|\n"
          out=row1+row2+int(y)*row1
          snip.rv=out
          `$0
endsnippet
